<screen os="h"><userinput>../glibc-&glibc-version;/configure \
    --prefix=/usr \
    --enable-kernel=&glibc-kernel-version; \
    --libexecdir=/usr/lib/glibc \
    --libdir=/usr/lib \
    --enable-obsolete-rpc \
    --enable-stack-protector=strong \
    --cache-file=config.cache</userinput></screen>

